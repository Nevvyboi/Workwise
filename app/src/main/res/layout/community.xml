<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F9FC">

    <!-- Page Title -->
    <TextView
        android:id="@+id/pageTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Community"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Main Group Chat Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mainGroupChat"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#FFFFFF"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/pageTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="24dp">

            <!-- Group Icon -->
            <ImageView
                android:id="@+id/groupIcon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/outline_groups_24"
                android:background="@drawable/circle_background_primary"
                android:padding="16dp"
                app:tint="#FFFFFF"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="ContentDescription" />

            <!-- Group Name -->
            <TextView
                android:id="@+id/groupName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="WorkWise Community"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A"
                android:textAlignment="center"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/groupIcon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Member Count -->
            <TextView
                android:id="@+id/memberCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1,247 members"
                android:textSize="14sp"
                android:textColor="#6D7A88"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/groupName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Online Indicator -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/memberCount"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/status_online"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="284 online now"
                    android:textSize="12sp"
                    android:textColor="#4CAF50" />
            </LinearLayout>

            <!-- Group Description -->
            <TextView
                android:id="@+id/groupDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Connect with professionals, share insights, and grow together in our vibrant community. Discuss career opportunities, industry trends, and support each other's journey."
                android:textSize="14sp"
                android:textColor="#6D7A88"
                android:textAlignment="center"
                android:lineSpacingExtra="4dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/memberCount"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Join Chat Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/joinChatButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:text="Join Community Chat"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="@color/colorPrimary"
                app:cornerRadius="28dp"
                app:icon="@drawable/outline_chat_24"
                app:iconTint="@android:color/white"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@id/groupDescription"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Recent Activity -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/joinChatButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recent Activity"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A"
                    android:layout_marginBottom="12dp" />

                <!-- Recent Message 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        app:cardCornerRadius="18dp"
                        app:cardElevation="2dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/outline_account_circle_24"
                            android:background="#E3F2FD"
                            android:padding="6dp"
                            tools:ignore="ContentDescription" />
                    </com.google.android.material.card.MaterialCardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sarah Johnson"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#1A1A1A" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Just shared a new job opportunity at TechCorp..."
                            android:textSize="12sp"
                            android:textColor="#6D7A88"
                            android:maxLines="1"
                            android:ellipsize="end" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 min ago"
                        android:textSize="10sp"
                        android:textColor="#9E9E9E" />
                </LinearLayout>

                <!-- Recent Message 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        app:cardCornerRadius="18dp"
                        app:cardElevation="2dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/outline_account_circle_24"
                            android:background="#E8F5E8"
                            android:padding="6dp"
                            tools:ignore="ContentDescription" />
                    </com.google.android.material.card.MaterialCardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mike Chen"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#1A1A1A" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Does anyone have experience with remote interviews?"
                            android:textSize="12sp"
                            android:textColor="#6D7A88"
                            android:maxLines="1"
                            android:ellipsize="end" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15 min ago"
                        android:textSize="10sp"
                        android:textColor="#9E9E9E" />
                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>