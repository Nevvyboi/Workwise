<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F9FC">

    <!-- Top bar: centered title (no back) -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/pageTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Community"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/profileButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/outline_account_circle_24"
            android:contentDescription="Profile"
            android:background="?attr/selectableItemBackgroundBorderless" />
    </LinearLayout>

    <!-- WorkWise Community card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mainGroupChat"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#FFFFFF"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp">

                <ImageView
                    android:id="@+id/groupIcon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/outline_groups_24"
                    android:background="@drawable/circle_background_primary"
                    android:padding="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/communityTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="WorkWise Community"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#1B2430"
                    app:layout_constraintStart_toEndOf="@id/groupIcon"
                    app:layout_constraintTop_toTopOf="@id/groupIcon"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="16dp" />

                <TextView
                    android:id="@+id/communityMembers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1,247 members"
                    android:textSize="14sp"
                    android:textColor="#6D7A88"
                    app:layout_constraintStart_toStartOf="@id/communityTitle"
                    app:layout_constraintTop_toBottomOf="@id/communityTitle"
                    android:layout_marginTop="6dp" />

                <TextView
                    android:id="@+id/communityOnline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â€¢ 284 online now"
                    android:textSize="14sp"
                    android:textColor="#2E7D32"
                    app:layout_constraintStart_toEndOf="@id/communityMembers"
                    app:layout_constraintTop_toBottomOf="@id/communityTitle"
                    android:layout_marginStart="12dp" />

                <TextView
                    android:id="@+id/communityDesc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Connect with professionals, share insights, and grow together. Discuss career opportunities, industry trends, and support each other's journey."
                    android:textSize="14sp"
                    android:textColor="#4A5665"
                    android:lineSpacingExtra="2dp"
                    app:layout_constraintTop_toBottomOf="@id/groupIcon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="16dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/joinChatButton"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Join Community Chat"
                    android:textAllCaps="false"
                    android:insetTop="12dp"
                    android:insetBottom="12dp"
                    app:cornerRadius="28dp"
                    app:icon="@drawable/baseline_send_24"
                    app:iconPadding="12dp"
                    app:iconGravity="textStart"
                    app:backgroundTint="@color/colorPrimary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@id/communityDesc" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
